@model IEnumerable<Cinemas.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>Lista Peliculas</h1>
    <div class="d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-primary h-25">Agregar Pelicula</a>
    <form method="get" asp-action="Index" class="mb-3 w-40">
        <div class="input-group">
                <a class="btn btn-warning" asp-area="" asp-controller="Peliculas" asp-action="Index"><i class="fa-solid fa-arrow-left"></i></a>
            <input type="text" name="searchString" class="form-control" placeholder="Buscar por título">
            <div class="input-group-append">
                    <button type="submit" class="btn btn-info"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
                
        </div>
    </form>
    </div>
</div>

 <div class="container containerCard">

        @foreach (var item in Model) {
        <div class="card cards">
                <img src="@Html.DisplayFor(modelItem => item.Poster)" alt="Poster">
                   @* <img class="img-responsive" src="@item.Poster"> *@
            <h4>
                @Html.DisplayFor(modelItem => item.Titulo)
            </h4>
            <p>
                @Html.DisplayFor(modelItem => item.Sipnopsis)
            </p>
            <p>
                @Html.DisplayFor(modelItem => item.Director)
            </p>
            <p>
                @Html.DisplayFor(modelItem => item.Genero)
            </p>

            <p>
                @for (int i = 0; i < item.Calificacion; i++)
                {
                    <i class="fa-solid fa-star" style="color: yellow"></i>
                }
                @for (int i = item.Calificacion; i < 5; i++)
                {
                    <i class="fa-solid fa-star"></i>
                }
            </p>

            <span>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa-solid fa-circle-info" style="color: #ffffff;"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
            </span>
        </div>  
}
</div> 
